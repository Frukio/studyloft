.slider {

    &__wrapper-main {
        width: 100%;
        height: 100%;
        position: relative;
    }

    &__active-image--pic {
        display: block;
        max-width: 100%;
        max-height: 100%;
    }

    &__number {
        position: absolute;
        z-index: -1;
        right: -350px;
        top: 40%;
        font-size: 700px;
        font-weight: 800;
        line-height: .12;
        color: rgba(65.76.99, .15);
    }
}